<div class="row-fluid">
  <div class="span3">
  
    <h3><%= @camera.description %></h3>
    
    <div class="well">

    <p>
      <b>URL:</b>
      <%= @camera.url %>
    </p>
    
    <p>
      <b>Current position:</b>
      <%= @camera.current_position %>
    </p>

    <p>
      <b>Go to position:</b>
      <%= @camera.go_to_position %>
    </p>

    </div>
  </div>

  <div class="span9">
    <video width="320" height="240" controls>
      <source src="video.mp4" type="video/mp4">
    </video>

    <p>
      <button class="btn" type="button"><i class="icon-arrow-left"></i></button>
      <button class="btn" type="button"><i class="icon-arrow-right"></i></button>
    </p>
  </div>
</div>

<div class="form-actions">
    <p>
      <%= link_to 'Edit', edit_camera_path(@camera), :class => 'btn btn-primary' %>
    </p> 
    <%= link_to 'Back', cameras_path %>
</div>
