<div class="row-fluid">
  <div class="span3">
  
    <h3>Camera #<%= @camera.id %></h3>
    
    <div class="well">

    <p>
	  <b>Description</b>
	  <%= @camera.description %>
	</p>

    <p>
      <b>Current position:</b>
      <%= @camera.current_position %>
    </p>

    <p>
      <b>Go to position:</b>
      <%= @camera.go_to_position %>
    </p>

    </div>
  </div>

  <div class="span9">
    <video width="320" height="240" controls>
      <source src="video.mp4" type="video/mp4">
    </video>

    <p>
        <span class="badge">1</span>
        <span class="badge badge-success">2</span>
        <span class="badge">3</span>
        <span class="badge">4</span>
        <span class="badge">5</span>
    </p>
      <!--<button class="btn" type="button"><i class="icon-arrow-left"></i></button>-->
      <%= link_to '<i class="icon-arrow-left"></i>'.html_safe, translade_camera_path(:id), :class => 'btn' %>
      <!--<button class="btn" type="button"><i class="icon-arrow-right"></i></button>-->
      <%= link_to '<i class="icon-arrow-right"></i>'.html_safe, translade_camera_path(:id), :class => 'btn' %>
    </p>

  </div>
</div>

<div class="form-actions">
    <p>
      <%= link_to 'Edit', edit_camera_path(@camera), :class => 'btn btn-primary' , :style => 'color:#FFFFFF' %>
    </p> 
    <%= link_to 'Back', cameras_path %>
</div>
