<p id="notice"><%= notice %></p>

<div class="row-fluid">
  <div class="span3">
  
    <h2><b>URL:</b><%= @camera.url %></h2>
    <div class="well">
    <p>
      <b>Current position:</b>
      <%= @camera.current_position %>
    </p>

    <p>
      <b>Go to position:</b>
      <%= @camera.go_to_position %>
    </p>

    <p>
      <b>Current x position:</b>
      <%= @camera.current_x_position %>
    </p>

    <p>
      <b>Current y position:</b>
      <%= @camera.current_y_position %>
    </p>

    <p>
      <b>Go to x position:</b>
      <%= @camera.go_to_x_position %>
    </p>

    <p>
      <b>Go to y position:</b>
      <%= @camera.go_to_y_position %>
    </p>
    </div>
  </div>

  <div class="span9">
    <video width="320" height="240" controls>
      <source src="movie.mp4" type="video/mp4">
      <source src="movie.ogg" type="video/ogg">
    </video>
    <p>
      <button class="btn" type="button"><i class="icon-arrow-left"></i></button>
      <button class="btn" type="button"><i class="icon-arrow-right"></i></button>
    </p>
  </div>
</div>










