<div class="page-header">
	<h1>Cameras</h1>
</div>

<div class="well">

<table class="table table-striped">
  <tr>
    <th>Description</th>
    <th>URL</th>
    <th>Current position</th>
    <th>Actions</th>
    
  </tr>

<% @cameras.each do |camera| %>
  <tr>
    <td><%= camera.description %></td>
    <td><%= camera.url %></td>
    <td><%= camera.current_position %></td>
    <td><%= link_to '<i class="icon-search"></i> Mostrar'.html_safe, camera, :class => 'btn btn-mini btn-white btn-primary', :style => 'color:#FFFFFF' %>
        <%= link_to '<i class="icon-pencil"></i> Editar'.html_safe, edit_camera_path(camera), :class => 'btn btn-mini' %>
   <%= link_to '<i class="icon-remove"></i> Remover'.html_safe, camera, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger' , :style => 'color:#FFFFFF' %>
     </td>
  </tr>
<% end %>
</table>

</div>

<div class="row">
	 <% @cameras.each do |camera| %>
		<div class="span3 pagination-centered well">
	     <%= link_to image_tag(image_path(camera.url), :size => '250x250', :class => 'camera-img', :alt => "Video for other Platform/    OS"),camera%>
	
	<p>
		<b>Camera:</b>
		<%= camera.description %>
	</p>
	  </div>
	<% end %>
	
</div>


<div class="form-actions">
  <%= link_to 'New Camera', new_camera_path, :class => 'btn btn-primary btn-white' , :style => 'color:#FFFFFF' %>
</div>
